<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.game_stats.sports_game_stats">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_square"
        android:label="@string/app_name"
        android:roundIcon="@drawable/launcher_rounded"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        >

        <activity android:name="com.game_stats.sports_game_stats.controller.VenuesController"></activity>
        <activity android:name="com.game_stats.sports_game_stats.controller.GamesTodayController" />
        <activity android:name="com.game_stats.sports_game_stats.controller.TeamGameStatsController" />
        <activity android:name="com.game_stats.sports_game_stats.controller.DashboardController"
            android:screenOrientation="portrait"/>
        <activity android:name="com.game_stats.sports_game_stats.controller.TeamController" />
        <activity android:name="com.game_stats.sports_game_stats.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>